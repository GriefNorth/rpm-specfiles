---
 src/theme/3.18/sass/_main.scss | 15 +++++++--------
 1 file changed, 7 insertions(+), 8 deletions(-)

diff --git a/src/theme/3.18/sass/_main.scss b/src/theme/3.18/sass/_main.scss
index 15cb36b..4eab2df 100644
--- a/src/theme/3.18/sass/_main.scss
+++ b/src/theme/3.18/sass/_main.scss
@@ -731,9 +731,14 @@ GtkPopover GtkListBoxRow {
     @extend .budgie-notification-window;
 
     // Lists
-    .flowbox { color: $fg_color; }
-    .flowbox-child {
+    GtkFlowBox {
+        padding: 0px;
+        margin: 0px;
+        color: $fg_color;
+    }
+    GtkFlowBoxChild {
         padding: 3px;
+        margin: 0px;
         color: $fg_color;
 
         &:hover { background-color: $button_bg; }
@@ -751,12 +756,6 @@ GtkPopover GtkListBoxRow {
             }
         }
     }
-
-    GtkFlowBox,
-    GtkFlowBoxChild {
-        padding: 0;
-        margin: 0;
-    }
 }
 
